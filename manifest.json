{
  "manifest_version": 2,
  "name": "DA Films Downloader",
  "version": "1.0",
  "description": "Download videos from dafilms.cz",
  "permissions": [
    "downloads",
    "storage",
    "*://*.dafilms.cz/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DA Films Downloader",
    "default_icon": "icon.svg"
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*.dafilms.cz/*"],
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "da-films-downloader@addon.mozilla.org",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}