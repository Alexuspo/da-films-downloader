{
  "manifest_version": 2,
  "name": "DA Films Downloader",
  "version": "1.0",
  "description": "Download videos from dafilms.cz",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "*://*.dafilms.cz/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "DA Films Downloader",
    "default_icon": "icon.svg"
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://*.dafilms.cz/*"],
      "js": ["content.js"]
    }
  ]
}